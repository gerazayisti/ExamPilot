{
  "name": "exam-pilot",
  "version": "0.1.0",
  "private": true,
  "main": "main.js",
  "scripts": {
    "dev": "NODE_ENV=development next dev",
    "build": "prisma generate && prisma db push && next build",
    "start": "NODE_ENV=production next start",
    "lint": "eslint",
    "electron:dev": "concurrently \"next dev\" \"wait-on http://localhost:3000 && electron .\"",
    "electron:start": "concurrently \"next start\" \"wait-on http://localhost:3000 && electron .\"",
    "build:win": "next build && electron-builder --win",
    "vercel-build": "npm run db:switch-prod && NODE_ENV=production npm run build",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "db:migrate": "prisma migrate deploy",
    "db:switch-local": "cp prisma/schema.sqlite.prisma prisma/schema.prisma && prisma generate",
    "db:switch-prod": "cp prisma/schema.postgres.prisma prisma/schema.prisma && prisma generate"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@prisma/client": "5.10.0",
    "@types/bcryptjs": "^2.4.6",
    "bcryptjs": "^3.0.3",
    "clsx": "^2.1.1",
    "jose": "^6.1.3",
    "jspdf": "^3.0.4",
    "jspdf-autotable": "^5.0.2",
    "lucide-react": "^0.562.0",
    "next": "16.1.1",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "tailwind-merge": "^3.4.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "babel-plugin-react-compiler": "1.0.0",
    "concurrently": "^9.2.1",
    "electron": "^33.4.11",
    "electron-builder": "^25.1.8",
    "eslint": "^9",
    "eslint-config-next": "16.1.1",
    "prisma": "5.10.0",
    "tailwindcss": "^4",
    "typescript": "^5",
    "wait-on": "^8.0.5"
  },
  "author": {
    "name": "Gervais Azanga Ayissi",
    "email": "gerazayisti@gmail.com",
    "phone": "+237695183768"
  },
  "description": "Système de gestion et planification d'examens",
  "build": {
    "appId": "com.exampilot.app",
    "productName": "ExamPilot",
    "copyright": "Copyright © 2026 Gervais Azanga Ayissi",
    "asar": true,
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "main.js",
      "preload.js",
      ".next/**/*",
      "public/**/*",
      "prisma/schema.prisma",
      "prisma/dev.db",
      "package.json"
    ],
    "extraMetadata": {
      "main": "main.js"
    },
    "asarUnpack": [
      "node_modules/@prisma/client/**/*",
      "node_modules/.prisma/**/*",
      "prisma/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "publisherName": "Gervais Azanga Ayissi"
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "ExamPilot",
      "license": "build/license_fr.txt",
      "installerLanguages": [
        "fr_FR"
      ],
      "language": "1036",
      "warningsAsErrors": false
    }
  }
}